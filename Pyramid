#include <iostream>
using namespace std;

int main()
{
    int rows;

     cout << "Enter nubmber of rows:" << endl;
     cin >> rows ;

     for (int i = rows;  i >=1;  i--)
     {
    	 for (int j = 1; j<=i; j++ )
    	 {
    		 cout << "*";

    	 }

    	 cout << "\n" << endl;
     }



     for (int i = 1;  i <=rows;  i++)
     {
    	 for (int j = 1; j<=i; j++ )
    	 {
    		 cout << "*";

    	 }

    	 cout << "\n" << endl;
     }
    return 0;
}
